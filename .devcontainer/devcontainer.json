{
    "name": "JIT Compiler workshop",
    "build": {
      "dockerfile": "../Dockerfile",
      "args": {
        "TARGETARCH": "${localEnv:TARGETARCH}"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "Gruntfuggly.todo-tree", // for finding TODO's
          "vscjava.vscode-java-pack", // Java
          "mnxn.jvm-bytecode-viewer", // Java
          "ms-python.python" // Python
        ]
      }
    },
    "postCreateCommand": "echo 'Container initialized for architecture: $TARGETARCH'"

}
